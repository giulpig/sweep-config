// From my ZMK fork on GitHub
#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

// Home row mods macro
#define HRML(k1,k2,k3,k4) &ht LCTRL k1 &ht LALT k2  &ht LSHFT k3 &ht LGUI k4
#define HRMR(k1,k2,k3,k4) &ht RGUI k1  &ht RSHFT k2 &ht RALT k3  &ht RCTRL k4
#define TMT(k1,k2,k3,k4) &lt NAV k1  &ht LSHFT k2 &ht S(C(G(RALT))) k3  &lt SYM k4

// Nav layer special command buttons
#define GO_FWRD &kp LG(RBKT) // Forward button on browser and other apps
#define GO_BACK &kp LG(LBKT) // Back button on browser and other apps
#define CO_PTAB &kp LS(LC(TAB)) // Previous Tab
#define CO_NTAB &kp LC(TAB) // Next Tab
#define CO_UNDO &kp LG(Z) 
#define CO_CUT &kp LG(X) 
#define CO_COPY &kp LG(C) 
#define CO_PASTE &kp LG(V) 
#define CANCEL &kp K_CANCEL 
// #define SK_HYPER &sk LG(LC(LS(LALT))) // Sticky Hyper

// Media keys used on NAV
#define ME_VOLD &kp C_VOL_DN
#define ME_VOLU &kp C_VOL_UP
#define ME_MUTE &kp C_MUTE
#define ME_PLAY &kp C_PP

// macOS specific combinations
#define ALFRED LG(SPC) // Doubles as Spotlight for usage on iOS/iPadOS
#define SHTCAT LC(LS(SPC)) // App for mouseless operation
#define SCROLLA LG(LC(LS(SPC))) // App for mouseless scrolling (https://scrolla.app/)

// Aditional Writing Symbols
#define PARAG LA(N6) // ยง

// Layer names
#define DEF 0
#define NUM 1
#define NAV 2
#define SYM 3
#define FUN 4

&sk { // Custom &sk settings to allow for better handling of Callum Style mods
        release-after-ms = <5000>; // Default is 1000 ms
        quick-release; // Implemented fix from PR #1586 (https://github.com/zmkfirmware/zmk/pull/1586)
    };
&caps_word { // Changed settings to allow for accented characters
    continue-list = <
                    UNDERSCORE MINUS
                    SQT CARET TILDE GRAVE
                    K_CANCEL
                    BACKSPACE DELETE
                >;
    /delete-property/ ignore-modifiers; // Using modifiers as interrupters, avoiding CMD+Shift+S activations when I hit CMD+S.
};

/ {
    combos {
        compatible = "zmk,combos";
        
        // Layer combos        
        combo_numword_toggle { 
            timeout-ms = <80>;
            key-positions = <16 17 18>; // J K L / 4 5 6
            layers = <DEF NUM>;
            bindings = <&num_word>;
        };
        combo_navigate { 
            timeout-ms = <80>;
            key-positions = <11 12 13>; // S D F
            layers = <DEF NAV>;
            bindings = <&tog NAV>;
        };

        // macOS features combos
        combo_spotlight_alfred {
            timeout-ms = <80>;
            key-positions = <13 16>; // F J
            layers = <DEF>; // Only available in the DEF layer
            bindings = <&kp ALFRED>;
        };
        combo_shortcat {
            timeout-ms = <80>;
            key-positions = <1 2 3>; // W E R
            layers = <DEF>; // Only available in the DEF layer
            bindings = <&kp SHTCAT>;
        };
        combo_scrolla {
            timeout-ms = <80>;
            key-positions = <6 7 8>; // U I O
            layers = <DEF>; // Only available in the DEF layer
            bindings = <&kp SCROLLA>;
        };
        
        // Media
        combo_mute {
            timeout-ms = <80>;
            key-positions = <4 14>; // T G
            layers = <NAV>; // Only available in the NAV layer
            bindings = <&kp C_MUTE>;
        };
        
        // ZMK features
        combo_key_repeat {
            timeout-ms = <80>;
            key-positions = <26 27 28>; // M , .
            layers = <DEF>; // Only available in the DEF layer
            bindings = <&key_repeat>;
        };

        // Bluetooth toggles
        combo_bt0 {
            timeout-ms = <80>;
            key-positions = <3 4>;
            layers = <FUN>; 
            bindings = <&act_bt0>;
        };
        combo_toggle_bt1_connection {
            timeout-ms = <80>;
            key-positions = <13 14>;
            layers = <FUN>; 
            bindings = <&act_bt1>;
        };
        combo_toggle_bt2_connection {
            timeout-ms = <80>;
            key-positions = <23 24>;
            layers = <FUN>; 
            bindings = <&act_bt2>;
        };
        combo_toggle_bt3_connection {
            timeout-ms = <80>;
            key-positions = <5 6>;
            layers = <FUN>; 
            bindings = <&act_bt3>;
        };
        combo_toggle_bt4_connection {
            timeout-ms = <80>;
            key-positions = <15 16>;
            layers = <FUN>; 
            bindings = <&act_bt4>;
        };
        combo_toggle_bt5_connection {
            timeout-ms = <80>;
            key-positions = <25 26>;
            layers = <FUN>; 
            bindings = <&act_bt5>;
        };
        
        // Bluetooth Profile Config buttons
        combo_bootloader_on_the_left_side {
            timeout-ms = <80>;
            key-positions = <20 21>;
            layers = <FUN>; 
            bindings = <&bootloader>;
        };
        combo_clear_current_bluetooth_profile {
            timeout-ms = <80>;
            key-positions = <28 29>;
            layers = <FUN>; 
            bindings = <&bootloader>;
        };
    };
    
    behaviors {
        ht: hold_tap { // Currently, just the NUM row uses a hold tap key with &lt SYM N0 on right inner thumb.
            label = "hold_tap";
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <350>; // Terms hugely favors taps
            quick-tap-ms = <280>;
            global-quick-tap;
            bindings = <&kp>, <&kp>;
        };
        
        shift_cw: tap_dance_caps_word {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_CAPS_WORD";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&kp LSHFT>, <&caps_word>;
        };
        
        nextprev: tap_dance_media_next_prev {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_NEXT_PREV_MEDIA";
            #binding-cells = <0>;
            tapping-term-ms = <300>;
            bindings = <&kp C_NEXT>, <&kp C_PREV>;
        };
        
        swapper: swapper { // Swapper // Got it from urob's repo as it's tri-state behavior is currently a PR for main ZMK
            compatible = "zmk,behavior-tri-state";
            label = "SWAPPER";
            #binding-cells = <0>;
            bindings = <&kt LCMD>, <&kp TAB>, <&kt LCMD>;
            ignored-key-positions = <7 9 16 17 18 29>; // Arrow keys and DEL/BSPC to quit/hide apps from altTabfs
        };
        
        num_word: behavior_num_word { // Documentation in PR# 1451 (https://github.com/zmkfirmware/zmk/pull/1451), got it from urob's repo
			compatible = "zmk,behavior-caps-word";
			label = "NUM_WORD_KEY";
			#binding-cells = <0>;
                        layers = <NUM>;                     // layer to be toggled
                        ignore-numbers;                     // numbers won't deactivate the layer, hence &num_word
                        ignore-modifiers;                   // modifiers won't deactivate the layer, hence &num_word
			            continue-list =                     // other keycodes that will not cancel &numword
                            <   BACKSPACE DELETE 
                                DOT COMMA SQT DQT COLON SEMICOLON SLASH MINUS
                                K_CANCEL
                            >;       
		};
    };
    
    macros {
        // Macros to cancel sticky behaviors with a muted key tap, emulating from Callum's oneshot QMK macro
        la_nav: cancel_queued_os_mods_and_toggle_nav {
            label = "LA_NAV";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <1>;
            bindings
                = <&macro_press &mo NAV>
                , <&macro_tap &kp K_CANCEL>
                , <&macro_pause_for_release>
                , <&macro_release &mo NAV>
                ;
        };
        la_sym: cancel_queued_os_mods_and_toggle_sym {
            label = "LA_SYM";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <1>;
            bindings
                = <&macro_press &mo SYM>
                , <&macro_tap &kp K_CANCEL>
                , <&macro_pause_for_release>
                , <&macro_release &mo SYM>
                ;
        };
        
        // Macros for quick bluetooth switching
        act_bt0: change_to_bt0_and_back_to_def { // MacBook Air
            label = "Activate BT0 device";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <100>;
            bindings
                = <&macro_tap &bt BT_SEL 0>
                , <&macro_tap &to DEF>
                ;
        };
        act_bt1: change_to_bt1_and_back_to_def { // iPad
            label = "Activate BT1 device";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <100>;
            bindings
                = <&macro_tap &bt BT_SEL 1>
                , <&macro_tap &to DEF>
                ;
        };
        act_bt2: change_to_bt2_and_back_to_def { // iPhone
            label = "Activate BT2 device";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <100>;
            bindings
                = <&macro_tap &bt BT_SEL 2>
                , <&macro_tap &to DEF>
                ;
        };
        act_bt3: change_to_bt3_and_back_to_def { // PiPoca
            label = "Activate BT3 device";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <100>;
            bindings
                = <&macro_tap &bt BT_SEL 3>
                , <&macro_tap &to DEF>
                ;
        };
        act_bt4: change_to_bt4_and_back_to_def { // Empty
            label = "Activate BT4 device";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <100>;
            bindings
                = <&macro_tap &bt BT_SEL 4>
                , <&macro_tap &to DEF>
                ;
        };
        act_bt5: change_to_bt5_and_back_to_def { // Empty
            label = "Activate BT5 device";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <100>;
            bindings
                = <&macro_tap &bt BT_SEL 5>
                , <&macro_tap &to DEF>
                ;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <NAV SYM>;
            then-layer = <FUN>;
        };
    };

